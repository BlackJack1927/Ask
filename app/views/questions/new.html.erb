<div class="container">
  <h2 class="title-lg mb"> Нове Питання </h2>
  <!-- форма описана в HTML
  <form action="/questions" method="POST">
  <p><label for= "question[body]">Текст вопроса</label></p>
  <p><textarea name="question[body]" rows=7></textarea></p>
  <p><label for= "question[user_id]">User ID</label></p>
  <p><input type="number" name="questions[user_id]"></p>
  <p><input type="submit" value="Создать"></p>
  </form>
  -->
  <!-- форма описана в Form helper -->
  <%= form_with model: @question do |form| %>
  <p><%=form.label :body, 'текст вопроса' %></p>
  <p><%= form.text_area :body, rows:7, class: "form-text-area" %></p>

  <p class="mt"><%= form.label :user_id %></p>
  <p><%=form.text_field :user_id, class: "form-text-field" %></p>

  <p class="mt"><%=form.submit 'Save', class: "button button-main"%></p>
  <% end %>
</div>
